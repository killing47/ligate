<div class=" container" style="margin: 120px auto;">
  <div class="row">
    <div class="col-5  image" style="text-align: center;" >
      <%if @user.image_id == nil %>
        <%= image_tag(@user.user_image,  :size => "300x300", class:"image") %>
      <% else%>
        <%= attachment_image_tag  @user, :image, format: 'jpeg', size:"300x300" , class:"image"%>
      <% end %>
    </div>
    <div class="col-7 name" style="padding-left: 25px;" >
      <div class="row">
        <div class="col-5 ">
          <h2>CB:<%= @user.nick_name %></h2>
        </div>
        <div class="col-7" style="text-align: right;">
          <%= link_to "PDF", "http://localhost:3000/users/#{@user.id}.pdf",  class: "btn btn-primary"%>
          <button type="button" class="btn btn-primary " id="button1">QR</button>
          <% if current_user %>
            <button type="button" class="btn btn-primary " id="button3">S−IDT</button><br>
            <button type="button" class="btn btn-primary " id="button2" style="margin-top: 10px;">AddCD</button>
            <button type="button" class="btn btn-primary " id="button4"  style="margin-top: 10px;">ChangeCD</button>
          <% end %>
        </div>
      </div>
      <div class="row">
        <div class="col-12"><h1>Introduction:</h1></div>
      </div>
      <div class="row">
        <div class="col-12" style="height: 100%; width: 100%; border: 1px solid black; margin-left: 3%;">
          <%=  simple_format(@user.introduction) %>
        </div>
      </div>
    </div>
  </div>
</div>

<div class="container-fruid" >
  <div class="row">
    <div class="col-12">
      <ul class="slider">
        <% @user.cds.each do |f| %>
        <li class="item">
          <div style="position: relative;">
          <% if current_user %>
          <% if f.favorited_by?(current_user) %>
            <%= link_to fav_cds_path(f), class: "fav", remote: true do %>
              <i class="fas fa-heart" id="<%= f.id %>"></i>
            <% end %>
          <% else %>
            <%= link_to fav_cds_path(f), class: "fav", remote: true do %>
              <i class="far fa-heart" id="<%= f.id %>"></i>
            <% end %>
          <% end %>
          <% end %>
          <%= link_to op_cd_path(f),id:"op", remote: true do %>
            <%= attachment_image_tag  f, :cd_image, format: 'jpeg',fallback: "/no_image.jpg", size: "200x200", id: "#{f.id}"%>
          <% end %>
          </div>
        </li>
        <% end %>
      </ul>
    </div>
  </div>
</div>

<div class="modal fade" id= "cd_show">
  <div class="modal-dialog" role="document">
    <div class="modal-content" >
      <h3>Select_CD</h3>
    </div>
  </div>
</div>

<div class="modal fade" id="dialog1">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <%= render "partial/qr_code" %>
    </div>
  </div>
</div>

<div class="modal fade" id="dialog2">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div>
        <%= form_with(model: @cd, local: true)  do |f| %>
          <%= f.file_field :cd_image,style: "color:white; margin-left: 190px;"%>
          <%= f.text_field :cd_title %><br>
          <%= f.text_field :cd_genre %>
          <div>
            <%= f.fields_for :musics do |i| %>
              <%= render 'music_fields', f: i %>
            <% end %>
           <%= link_to_add_association 'AddMusic',f, :musics %>
          </div>
          <%= f.submit %>
        <% end %>
      </div>
    </div>
  </div>
</div>

<div class="modal fade" id="dialog3">
  <div class="modal-dialog" role="document">
    <div class="modal-content" style="text-align: center;">
      <%= form_with(model: @user, local: true) do |f| %>
        <%= f.label :introduction%><br />
        <%= f.text_area :introduction, style:"color: black; width: 80%; height: 150px;" %><br />
        <%= f.submit '変更',style: "margin-left: 300px; width: 100px;" %>
      <% end %>
    </div>
  </div>
</div>


<script type="text/javascript">
$('#button1').on('click', function() {
    $('#dialog1').modal();
});

$('#button2').on('click', function() {
    $('#dialog2').modal();
});

$('#button3').on('click', function() {
    $('#dialog3').modal();
});

$('#button4').on('click', function() {
    $('#dialog4').modal();
});

$(function(){
  $(document).on("ajax:success","#op",function(e){
    $("#cd_show").html(e.detail[2]['response']).modal();
  })
})
</script>

