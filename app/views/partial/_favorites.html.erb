<h1 class="favorite_style">Contributor</h1>
<div class="favorite_cb">
  <% fav_user = ct_user.favorites.map{|fav| fav.cd.user}.uniq %>
  <% fav_user.each do |f| %>
    <%= link_to user_path(f.id),style: "color: black;" do %>
      <%if f.image_id == nil %>
        <%= image_tag(f.user_image,  :size => "100x100", id:"image1", class: "image") %>
      <% else%>
        <%= attachment_image_tag  f, :image, format: 'jpeg', size: "100x100", id:"image1" %>
      <% end %>
    <% end %>
  <% end %>
</div>

<h1 class="favorite_style">CD_Title</h1>
<div class="favorite_cd">
    <% ct_user.favorites.each do |f| %>
      <%= link_to user_path(f.cd.user.id) ,style: "color:black;" do %>
        <%= attachment_image_tag  f.cd, :cd_image, format: 'jpeg',fallback: "/audio.no_image.jpg", size: "100x100", class: "fv_cd_image"%>
      <% end %>
    <% end %>
</div>
